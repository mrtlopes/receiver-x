{
    "compilerOptions": {
        "sourceRoot": "./src/",
        "outDir": "./dist/",
        "removeComments": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots": [
          "./node_modules/@types"
        ],
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
}
